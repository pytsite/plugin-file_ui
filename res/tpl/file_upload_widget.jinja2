<div class="files-upload-wrapper">
    <div class="slots row">
        {# Slots #}
        {% for item in widget.get_files() %}
            <div class="slot slot-content sortable {{ widget.slot_css }}" data-uid="{{ item.uid }}">
                <div class="inner">
                    <div class="thumb" title="{{ item.name }}"><img class="img-responsive img-fluid" src="{{ item.get_thumb_url(preview_image=widget.preview_images) }}"></div>
                    <a href="{{ item.url }}" target="_blank" class="btn btn-default btn-light btn-sm btn-download"  title="{{ t('file_ui@download_file') }}"><i class="fa fas fa-fw fa-download"></i></a>
                    <button type="button" class="btn btn-danger btn-sm btn-remove" title="{{ t('file_ui@remove_file') }}"><i class="fa fas fa-fw fa-remove fa-times"></i></button>
                    {% if widget.show_numbers %}
                        <span class="number"></span>
                    {% endif %}
                    <input type="hidden" name="{{ widget.uid }}[]" value="{{ item.uid }}">
                </div>
            </div>
        {% endfor %}

        {# Progress bar #}
        <div class="hidden sr-only slot progress {{ widget.slot_css }}">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"
                 style="width: 0;">0%
            </div>
        </div>

        {# 'Add' button #}
        <div class="slot hidden sr-only add-button {{ widget.slot_css }}" style="display: inline-block">
            <div class="btn btn-default btn-light">
                <i class="{{ widget.add_btn_icon }}"></i> {{ widget.add_btn_label }}
                <input type="file" multiple accept="{{ widget.accept_files }}">
            </div>
        </div>
    </div>

    {# At least one input should be on the form #}
    <input type="hidden" name="{{ widget.uid }}[]" value="">
</div>
